<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <size
                android:height="12dp"
                android:width="150dp" />

            <stroke
                android:width="1dp"
                android:color="@color/progress_stroke" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <size
	                android:height="10dp"
	                android:width="150dp" />
                            
                <corners android:radius="5dip" />

                <solid android:color="#ffffb600"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size
                    android:height="10dp"
                    android:width="150dp" />                
                <corners android:radius="5dip" />

                <solid android:color="#ffffb600"/>

            </shape>
        </clip>
    </item>

</layer-list>