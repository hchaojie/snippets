<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
		<layer-list>
		    <item>
				<shape android:shape="rectangle"> 
		   			<padding android:left="10dp" android:right="10dp" android:bottom="10dp" android:top="10dp"/>
				    <stroke android:width="4dp" android:color="#ffa9a9a9" />
				    <corners android:radius="5dp" /> 
				</shape>
		    </item>
		    
		    <item android:top="-7dp" android:left="-7dp" android:bottom="-7dp" android:right ="-7dp">
		        <shape>
				    <corners android:radius="5dp" />  
				    
				   	<gradient android:startColor="#ffe9e9e9" android:endColor="#ffcecece" android:angle="270" /> 
			   	</shape>
			</item>
		</layer-list>
    </item>
  
    <item> 
		<shape> 
		    <stroke android:width="1px" android:color="#ff797979" />
		    <corners android:radius="5dp" />  
		    
		   	<gradient android:startColor="#ffe9e9e9" android:endColor="#ffcecece" android:angle="270" /> 
		   	<padding android:left="10dp" android:right="10dp" android:bottom="10dp" android:top="10dp"/>
		</shape>
	</item>
</selector>