<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/background"
        >
        <shape>
            <solid android:color="@color/progress_bg" />

            <stroke
                android:width="1dp"
                android:color="@color/progress_stroke" />

        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress"
        android:left="6dp"
        android:right="6dp">
        <clip>
            <shape>
                <solid android:color="@color/progress_bg" />

                <stroke
                    android:width="1dp"
                    android:color="@color/progress_stroke" />

                <padding
                    android:bottom="3dp"
                    android:left="3dp"
                    android:right="3dp"
                    android:top="3dp" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        android:left="6dp"
        android:right="6dp">
        <clip>
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/progress_stroke" />

                <padding
                    android:bottom="3dp"
                    android:left="3dp"
                    android:right="3dp"
                    android:top="3dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ffffb600"
                    android:centerY="0.75"
                    android:endColor="#ffffcb00"
                    android:startColor="#ffffd300" />
            </shape>
        </clip>
    </item>

</layer-list>