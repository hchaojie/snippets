<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="4dp" >

    <ImageView 
        android:id="@+id/image_contact_pic"
        android:layout_height="60dp"
        android:layout_width="60dp"	
        android:adjustViewBounds="true" />
  	
  	<LinearLayout
  	    android:id="@+id/content_wrapper"
  	    android:layout_width="0dp"
  	    android:layout_weight="1"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:padding="2dp" >
  	    
  		<TextView
  		    android:id="@+id/txt_contact_name"
  		    android:textColor="@color/font_black"
  		    android:textSize="@dimen/font_size_large"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
  		
  		<cn.hchaojie.snippets.temp.EllipsizingTextView
  		    android:id="@+id/txt_activity_content"
  		    android:textColor="@color/font_black"
  		    android:textSize="@dimen/font_size_normal"
  		    android:ellipsize="end"
  		    android:singleLine="false"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
  		  		
  		<TextView
  		    android:id="@+id/txt_activity_time"
  		    android:textColor="@color/font_gray"
  		    android:textSize="@dimen/font_size_small"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />  		
  	</LinearLayout>    
    
	<ImageView
	    android:id="@+id/icon_activity_type"
        android:layout_height="32dp"
        android:layout_width="32dp"
        android:adjustViewBounds="true" />
</LinearLayout>